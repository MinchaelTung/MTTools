<Window x:Class="Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Office文档转换支持Word Excel PowerPoint" Height="92" Width="348" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button Content="转换" HorizontalAlignment="Center" Margin="200,0,0,0" VerticalAlignment="Center" Width="75" Click="Button_Click_1"/>
        <RadioButton x:Name="rad_PDF" Content="PDF" HorizontalAlignment="Center" Margin="0,0,250,0" VerticalAlignment="Center" IsChecked="True"/>
        <RadioButton x:Name="rad_XPS" Content="XPS" HorizontalAlignment="Center" Margin="0,0,150,0" VerticalAlignment="Center"/>
        <RadioButton x:Name="rad_HTML" Content="HTML" HorizontalAlignment="Center" Margin="0,0,40,0" VerticalAlignment="Center"/>
        <RadioButton x:Name="rad_MHT" Content="MHT" HorizontalAlignment="Center" Margin="60,0,0,0" VerticalAlignment="Center"/>

    </Grid>
</Window>
