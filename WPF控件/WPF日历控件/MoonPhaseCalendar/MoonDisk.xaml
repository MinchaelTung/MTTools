<Viewport3D xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            x:Class="MoonPhaseCalendar.MoonDisk"
            Height="{Binding RelativeSource={RelativeSource self},
                             Path=ActualWidth}"
            Name="viewport3d">
    <ModelVisual3D x:Name="modvisGeometry" />
    <ModelVisual3D x:Name="modvisLight">
        <ModelVisual3D.Transform>
            <RotateTransform3D>
                <RotateTransform3D.Rotation>
                    <AxisAngleRotation3D x:Name="rotate" Axis="0 1 0" />
                </RotateTransform3D.Rotation>
            </RotateTransform3D>
        </ModelVisual3D.Transform>
    </ModelVisual3D>
</Viewport3D>
