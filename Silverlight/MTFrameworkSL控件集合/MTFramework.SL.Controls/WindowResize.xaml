<UserControl x:Class="MTFramework.SL.Controls.WindowResize"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    MouseEnter="UserControl_MouseEnter_1" MouseLeave="UserControl_MouseLeave_1" >
    <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown_1">
        <Border  BorderThickness="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="20" Height="20" Margin="0,0,-2,-2">
            <Path x:Name="ptResizeShadow" Margin="6,6,0,0" Cursor="SizeNWSE"
    			Data="M 8,0 L10,0 L10,2 L8,2 Z M 4,4 L6,4 L6,6 L4,6 Z M 8,4 L10,4 L10,6 L8,6 Z M0,8 L2,8 L2,10 L0,10 Z M4,8 L6,8 L6,10 L4,10 Z M8,8 L10,8 L10,10 L8,10 Z"
    			Fill="#E6E9ED"
    			/>
        </Border>
        <Border BorderThickness="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="20" Height="20" Margin="0,0,-1,-1">
            <Path x:Name="ptResize" Margin="6,6,0,0" Cursor="SizeNWSE" 
    			Data="M 8,0 L10,0 L10,2 L8,2 Z M 4,4 L6,4 L6,6 L4,6 Z M 8,4 L10,4 L10,6 L8,6 Z M0,8 L2,8 L2,10 L0,10 Z M4,8 L6,8 L6,10 L4,10 Z M8,8 L10,8 L10,10 L8,10 Z"
    			Fill="#9DA6B0"
    			/>
        </Border>
    </Grid>
</UserControl>
